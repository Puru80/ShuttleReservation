<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingHorizontal="@dimen/_30sdp"
    tools:context=".presentation.PopUpClass">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_edge"
        app:cardElevation="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:strokeColor="@color/black"
        app:strokeWidth="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ticket_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingHorizontal="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/ticket_origin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/ticket_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:paddingHorizontal="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/ticket_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:paddingHorizontal="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/ticket_tob"
                    style="@style/ticket_popup_text"/>

                <TextView
                    android:id="@+id/ticket_seats"
                    style="@style/ticket_popup_text" />

                <TextView
                    android:id="@+id/ticket_ps"
                    style="@style/ticket_popup_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_OK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ok"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:background="@color/ticketbg"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/canceltick"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:background="@color/ticketbg"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_75sdp"
                    android:layout_marginLeft="@dimen/_75sdp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>