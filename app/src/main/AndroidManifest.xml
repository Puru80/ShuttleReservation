<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mainpage.shuttlereservation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ShuttleResApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.OTPVerification"></activity>
        <activity android:name=".presentation.Cancelling" />
        <activity android:name=".presentation.Booking" />
        <activity android:name=".presentation.SignUp" />
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".presentation.LogIn" />
        <activity
            android:name=".presentation.SplashAct"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>